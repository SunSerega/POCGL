


TestRange('FromBytes', ()->
begin
Test(CLKernelArgLocal.FromBytes(new UIntPtr(123)));
Test(CLKernelArgLocal.FromBytes(HFQ(()->new UIntPtr(123), false)));
Test(CLKernelArgLocal.FromBytes(UInt32(123)));
Test(CLKernelArgLocal.FromBytes(HFQ(()->UInt32(123), false)));
Test(CLKernelArgLocal.FromBytes(Int32(123)));
Test(CLKernelArgLocal.FromBytes(HFQ(()->Int32(123), false)));
Test(CLKernelArgLocal.FromBytes(UInt64(123)));
Test(CLKernelArgLocal.FromBytes(HFQ(()->UInt64(123), false)));
Test(CLKernelArgLocal.FromBytes(Int64(123)));
Test(CLKernelArgLocal.FromBytes(HFQ(()->Int64(123), false)));
end);
TestRange('FromItemCount', ()->
begin
Test(CLKernelArgLocal.FromItemCount&<integer>(UInt32(64)));
Test(CLKernelArgLocal.FromItemCount&<integer>(HFQ&<UInt32>(()->64, false)));
Test(CLKernelArgLocal.FromItemCount&<integer>(Int32(64)));
Test(CLKernelArgLocal.FromItemCount&<integer>(HFQ&<Int32>(()->64, false)));
end);
TestRange('LikeArray', ()->
begin
Test(CLKernelArgLocal.LikeArray(a));
Test(CLKernelArgLocal.LikeArray(HFQ(()->a, false)));
Test(CLKernelArgLocal.LikeArray2(a2));
Test(CLKernelArgLocal.LikeArray2(HFQ(()->a2, false)));
Test(CLKernelArgLocal.LikeArray3(a3));
Test(CLKernelArgLocal.LikeArray3(HFQ(()->a3, false)));
Test(CLKernelArgLocal.LikeNativeArrayArea(ntv_arr_area));
Test(CLKernelArgLocal.LikeNativeArrayArea(HFQ(()->ntv_arr_area, false)));
Test(CLKernelArgLocal.LikeNativeArray(ntv_arr));
Test(CLKernelArgLocal.LikeNativeArray(HFQ(()->ntv_arr, false)));
Test(CLKernelArgLocal.LikeCLArray(cl_arr));
Test(CLKernelArgLocal.LikeCLArray(HFQ(()->cl_arr, false)));
end);

