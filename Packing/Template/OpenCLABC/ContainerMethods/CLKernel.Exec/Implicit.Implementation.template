


{$region Exec}

function CLKernel.Exec1(sz1: CommandQueue<integer>; params args: array of CLKernelArg): CLKernel;
begin
  Result := CLContext.Default.SyncInvoke(self.NewQueue.ThenExec1(sz1, args));
end;

